/* pages/car/car.wxss */
.car{
    height: 800px;
}
.content{
    height: 80%;
}
.goodslist{
    display: flex;
    padding: 20rpx 20rpx;
    background-color: white;
    border:1px solid whitesmoke;
}
.goodslist .left{
    width: 240rpx;
}
.goodslist .left image{
    width: 200rpx;
    height: 200rpx;
}
.goodslist .right{
    flex: 1;
}
.goodslist .right image{
    width: 44rpx;
    height: 44rpx;
}
.goodslist .right .goods_name{
    height: 80rpx;
    overflow: hidden;
}
.goodslist .right .goods_name text{
    height: 80rpx;
    font-size: 30rpx;
}

.goodslist .right .goods_price text{
    font-size: 36rpx;
    font-weight: 600;
    position: relative;
    height: 60rpx;
    color: brown;
    top: 10px;
}
.goodslist .right .car{
    height: 40rpx;
    text-align: center;
    position: absolute;
    right: 20rpx;
}
.goodslist .right .car text{
    border: 1px solid #ccc;
    border-radius: 10px;
    height: 40rpx;
    width: 100rpx;
    font-size: 25rpx;
    color: rgba(204, 204, 204, 0.863);
}

.shoucang{
    font-size: 20rpx;
    text-indent: 1em;
    height: 50rpx;
    line-height: 50rpx;
    color: rgba(204, 204, 204, 0.863);
}