/* pages/details/details.wxss */
.banner swiper{
    width: 100%;
    height: 750rpx;

}
.banner image{
    width: 100%;
}
.goods_info image{
    width: 48rpx;
    height: 48rpx;
}
.goods_info{
    background-color: #fff;
    padding: 20rpx 20rpx 0rpx 20rpx;
}
.goods_info .goods_title{
    font-size: 30rpx;
    line-height: 40rpx;
    height: 80rpx;
    color: #5f5f5f;
    padding-right: 140rpx;
    position: relative;
    overflow: hidden;
}
.goods_info .collect{
    right: 0;
    top: 0;
    width: 120rpx;
    font-size: 24rpx;
    height: 80rpx;
    line-height: 28rpx;
    position: absolute;
    text-align: center;
    border-left: 1px solid #e5e5e5;
}
.goods_info .collect text{
    display: block;
}
.goods_info .goods_price{
    font-size: 34rpx;
    color: #ff0000;
    margin: 20rpx 0px;
}
.goods_info .goods_price .old{
    font-size: 24rpx;
    color: #535353;
    text-decoration: line-through;/*中划线*/
}
.goods_info .bottom{
    height: 62rpx;
    line-height: 62rpx;
    color: #676767;
    font-size: 30rpx;
    border-top: 1px solid #f5f6f7;
}
.detail{
    width: 100%;
}
.content{
    background-color: white;
    margin-top: 40rpx;
    margin-bottom: 100rpx;
}
.content .title{
    height: 80rpx;
    line-height: 80rpx;
    text-indent: 1em;
}
.content image{
    width: 100vw;
}
.bottomNav image{
    width: 50rpx;
    height: 50rpx;
}
.bottomNav{
    position: fixed;
    bottom: 0;
    left: 0;
    height: 100rpx;
    line-height: 100rpx;
    background-color: white;
    width: 100%;
}
.bottomNav .ul{
    display: flex;
}
.bottomNav .li{
    width: 25%;
    text-align: center;
    font-size: 25rpx;
}
.bottomNav .li .cart{
    position: relative;
    width: 50rpx;
    margin: 30rpx auto 0 auto;
}
.bottomNav .li .cart .num{
    position: absolute;
    top: 0px;
    right: -8rpx;
    height: 26rpx;
    width: 26rpx;
    background-color: red;
    line-height: 26rpx;
    color: white;
    border-radius: 50%;
    font-size: 24rpx;
}
.bottomNav .li:nth-child(2){
    background-color: #FFA500;
    color: white;

}
.bottomNav .li:nth-child(3){
    background-color: #00AAEF;
    color: white;
}
.bottomNav .li:nth-child(4){
    background-color: #69C3AA;
    color: white;
}