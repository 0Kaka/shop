/* pages/car/car.wxss */
.car{
    height: 800px;
}
.content{
    height: 80%;
}
.goodslist{
    display: flex;
    padding: 20rpx 20rpx;
    background-color: white;
    border:1px solid whitesmoke;
}
.goodslist .left{
    width: 240rpx;
}
.goodslist .left image{
    width: 200rpx;
    height: 200rpx;
}
.goodslist .right{
    flex: 1;
}
.goodslist .right image{
    width: 44rpx;
    height: 44rpx;
}
.goodslist .right .goods_place {
    margin-left: 15rpx;
}
.goodslist .right .goods_name{
    height: 100rpx;
}
.goodslist .right .goods_name text{
    font-size: 25rpx;
    height: 100rpx;

}
.goodslist .right .goods_place text{
    font-size: 24rpx;
    color:#b2b2b2;
}
.goods_price{
    margin-top: 20rpx;

}
.goodslist .right .goods_price text{
    font-size: 36rpx;
    font-weight: 600;
    position: relative;
    color: rgba(214, 15, 15, 0.644);
}
.goodslist .right .car{
    position: absolute;
    right: 20rpx;
}
.bottomNav{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1px solid rgb(236, 236, 236);
    background-color: #fff;
}
.bottomNav .warp{
    padding: 0px 20px;
}

.bottomNav .warp .order{
    float: right;
    background-color: #ff7e3d;
    height: 60rpx;
    line-height: 60rpx;
    margin-top: 20rpx;
    text-align: center;
    border-radius: 2px;
    width: 160rpx;
}
.goodslist .buttons{
    width: 225rpx;
    height: 52rpx;
    position: absolute;
    right: 40rpx;
}

.goodslist .buttons .addbtn,.goodslist .buttons .subbtn{
    width: 52rpx;
    height: 52rpx;
    float: left;
    text-align: center;
    background-color: rgb(238, 238, 238);
    
}
.goodslist .buttons .addbtn text{
    text-align: center;
    position: absolute;
   top: -1rpx;
}
.goodslist .buttons .subbtn text{
    text-align: center;
    position: absolute;
   top: -1rpx;
}
.goodslist .buttons .num{
    width: 52rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    float: left;
    font-size: 28rpx;
}
.kong{
    margin-top: 40rpx;
    text-align: center;
    background-color: #fff;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
}